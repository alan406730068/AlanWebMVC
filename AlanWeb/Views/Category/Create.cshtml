@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">新增種類</h2>
            <hr/>
        </div>
@*         <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row p-1">
            @* model連接表單元素(form) tagHelper *@
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
            @* .NET提供欄位檢查的錯誤訊息*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            @* 當大於medium的大小，大小變為3 *@
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">新增</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    返回表單
                </a>
            </div>
        </div>
    </div>
</form>
@* 前端驗證，網頁不會轉圈圈*@
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}