@model List<Category>
<div class="container">
    @* 分為12列12欄 *@
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                種類列表
            </h2>
        </div>
        <div class="col-6 text-end">
            <h2 class="text-primary">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> 新增種類
                </a>
            </h2>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                種類名稱
            </th>
            <th>
                展示順序
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td style="max-width: 65px;">
                    <div class="w-75 d-flex justify-content-center" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> 編輯
                        </a>
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> 刪除
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>